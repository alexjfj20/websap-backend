# Configuración simplificada de .htaccess para WebSAP
# Renombre este archivo a .htaccess después de subirlo

# Habilitar el motor de reescritura
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /websap/
  
  # No aplicar reglas a archivos o directorios existentes
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  
  # Enviar todo a index.html
  RewriteRule ^ index.html [L]
</IfModule>

# Permitir acceso al directorio raíz
<Files ~ "^\.ht">
  Order allow,deny
  Allow from all
</Files>

# Configuración MIME básica
AddType text/css .css
AddType text/javascript .js
AddType application/javascript .js

# Habilitar CORS para API
<IfModule mod_headers.c>
  <FilesMatch "\.(js|css|html)$">
    Header set Access-Control-Allow-Origin "*"
  </FilesMatch>
</IfModule>